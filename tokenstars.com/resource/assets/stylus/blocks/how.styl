.how
    padding-top 45px
    
    &__title
        display block
        
        position relative
        
        width 100%
        
        text-align center
        
        font-size 45px
        font-style italic
        
        color #000
        
        margin-top 25px
        
    &-box
        display block
        
        position relative
        
        width 100%
        
        padding-left 150px
        padding-right 150px
        
        font-size 0
        
        margin-top 30px
        
    &--line
        display block
        
        position absolute
        
        top 17px
        left 0
        
        width 100%
        height 3px
        
    &-item
        display inline-block
        
        position relative
        
        width 25%
        
        vertical-align top
        
        padding-right 45px
        
    &-item:nth-child(1) &__ball
        background-color #7f00ff
            
    &-item:nth-child(1) &--line
        background #7f00ff
        background -moz-linear-gradient(left, #7f00ff 0%, #9a00ff 100%)
        background -webkit-linear-gradient(left, #7f00ff 0%,#9a00ff 100%)
        background linear-gradient(to right, #7f00ff 0%,#9a00ff 100%)
        filter "progid:DXImageTransform.Microsoft.gradient( startColorstr='#7f00ff', endColorstr='#9a00ff',GradientType=1 )"
            
    &-item:nth-child(2) &__ball
        background-color #9d00ff
            
    &-item:nth-child(2) &--line
        background #9d00ff
        background -moz-linear-gradient(left, #9d00ff 0%, #c300ff 100%)
        background -webkit-linear-gradient(left, #9d00ff 0%,#c300ff 100%)
        background linear-gradient(to right, #9d00ff 0%,#c300ff 100%)
        filter "progid:DXImageTransform.Microsoft.gradient( startColorstr='#9d00ff', endColorstr='#c300ff',GradientType=1 )"
            
    &-item:nth-child(3) &__ball
        background-color #c900ff
            
    &-item:nth-child(3) &--line
        background #c800ff
        background -moz-linear-gradient(left, #c800ff 0%, #e000ff 100%)
        background -webkit-linear-gradient(left, #c800ff 0%,#e000ff 100%)
        background linear-gradient(to right, #c800ff 0%,#e000ff 100%)
        filter "progid:DXImageTransform.Microsoft.gradient( startColorstr='#c800ff', endColorstr='#e000ff',GradientType=1 )"
            
    &-item:nth-child(4) &__ball
        background-color #e000ff
        
    &__ball
        display block
        
        position relative
        
        width 37px
        height 37px
        
        border-radius 50%
        
        font-size 36px
        font-style italic
        
        color #fff
        
        text-align center
        
        line-height 39px
        
    & p
        font-size 16px
        
        line-height 22px
        
        margin-top 15px
        
    &-footer
        display block
        
        position relative
        
        width 100%
        
        text-align center
        
        margin-top 25px