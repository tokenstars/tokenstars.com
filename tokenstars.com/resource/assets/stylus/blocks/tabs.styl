.tabs
    padding-top 20px
    
    font-size 0
    
    &__link
        display inline-block
        
        poisition relative
        
        font-size 24px
        
        color #000
        
        text-decoration none
        
        background-image url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' width='1' height='2'%3E%3Crect x='0' y='0.5' width='1' height='2' fill='rgba(0, 192, 255, 0.5)'/%3E%3C/svg%3E")
        background-position left bottom
        background-repeat repeat-x
        
        margin-left 20px
        
        &:first-child
            margin-left 0
            
        &:hover,
        &:active
            color #00c0ff