@charset "UTF-8";

@import "reset"
@import "fonts/*"
@import "variables"
@import "blocks/*"



html,
body
	width 100%
	height 100%

body
	-webkit-font-smoothing antialiased
	-webkit-text-size-adjust 100%
	-webkit-tap-highlight-color rgba(0,0,0,0)

	font-family $font-ptsans

section
	display block

	position relative

	width 100%
	min-width 900px

	@media screen and (max-width: $mobileWidth)
		min-width 100%
