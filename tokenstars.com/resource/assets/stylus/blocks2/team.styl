.team    
    background-image url(../images/team-background.jpg)
    background-size cover
    background-position center center
    
    padding-top 40px
    padding-bottom 50px
    
    & .page__layout
        padding-left $padding-left - 15
        padding-right $padding-right - 15
    
    &__title
        display block
        
        position relative
        
        font-size 32px
        font-weight 500
        
        color #fff
        
        text-align center
        
    &-list
        display table
        
        position relative
        
        width 100%
        height 100%
        
        margin-top 20px
        
        font-size 0
        
        border-spacing 15px
        
        table-layout fixed
        
        @media screen and (max-width: $mobileWidth)
            display block
            
            margin-top 35px
        
    &-row
        display table-row
        
        position relative
        
        height 100%
        
        @media screen and (max-width: $mobileWidth)
            display block
        
    &-item
        display table-cell
        
        position relative
        
        height 100%
        
        border-radius 7px
        
        background-color #fff
        
        padding-left 15px
        padding-right 60px
        padding-top 15px
        padding-bottom 20px
        
        table-layout fixed
        
        vertical-align top
        
        @media screen and (max-width: $mobileWidth)
            display block
            
            padding-right 15px
            
            margin-top 15px
        
    &-box
        display table
        
        position relative
        
        width 100%
        height 100%
        
        border-spacing 0
        
        @media screen and (max-width: $mobileWidth)
            display block
        
    &-cell
        display table-cell
        
        position relative
        
        vertical-align top
        
        @media screen and (max-width: $mobileWidth)
            display block
            
            width 100%
            
            text-align center
        
        &:first-child
            width 125px
            
            padding-right 20px
            
            @media screen and (max-width: $mobileWidth)
                width 100%
                
                padding-right 0
            
    &--photo
        display block
        
        position relative
        
        width 100%
        
        padding-bottom 100%
        
        border-radius 50%
        
        background-size cover
        background-position center center
        
        @media screen and (max-width: $mobileWidth)
            display inline-block
            
            width 60px
            height 60px
            
            padding-bottom initial
        
    &__name
        display inline-block
        
        position relative
        
        font-size 18px
        font-weight 500
        
        color #000
        
        vertical-align middle
        
        @media screen and (max-width: $mobileWidth)
            margin-top 15px
            
    &__linkedin
        display inline-block
        
        position relative
        
        vertical-align middle
        
        width 20px
        height 20px
        
        background-image url(../images/team-linkedin.svg)
        background-size 100% 100%
        
        margin-left 5px
        margin-bottom 3px

        @media screen and (max-width: $mobileWidth)
            margin-top 15px
        
    &__who
        display block
        
        position relative
        
        font-size 14px
        font-weight 500
        
        color #8C8C8C
        
        margin-top 2px
        
    & p
        margin-top 10px
        
        &:before
            content '“'
            
            color #157FFB
            
            font-weight 900
            
        &:after
            content '”'
            
            color #157FFB
            
            font-weight 900