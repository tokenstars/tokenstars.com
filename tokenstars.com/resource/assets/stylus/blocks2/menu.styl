.menu
    display block
    
    position relative
    
    width 100%
    height 76px
    
    font-size 0
    
    background-color rgba(#6E6E6E, 0.22)
    
    &-table
        display table
        
        position relative
        
        width 100%
        height 100%
    
    &-cell
        display table-cell
        
        position relative
        
        vertical-align middle
        
        white-space nowrap
        
        &:nth-child(2)
            text-align center
            
            @media screen and (max-width: $mobileWidth)
                display none
        
        &:last-child
            text-align right
        
    &--logo
        display block
        
        position relative
        
        width 204px
        height 46px
        
        background-image url(../images/logo.svg)
        
        @media screen and (max-width: $mobileWidth)
            width 48px
            height 46px
            
            background-image url(../images/logo-mobile.svg)

        &--l2
            margin 0 auto
        
    &__link
        display inline-block
        
        position relative
        
        font-size 16px
        font-weight 500
        
        color #fff
        
        text-decoration none
        
        vertical-align middle
        
        padding-top 10px
        padding-bottom 10px
        
        &:hover,
        &:active
            color #4399fd
        
    &__sep
        display inline-block
        
        position relative
        
        font-size 16px
        font-weight 500
        
        color #fff
        
        vertical-align middle
        
    &-nav &__link
        padding-left 15px
        padding-right 15px
        
    &-user
        display inline-block
        
        position relative
        
        vertical-align middle
        
    &-user &__link
        padding-left 8px
        padding-right 8px
        
    & .select
        vertical-align middle
        
        margin-left 32px
        
        @media screen and (max-width: $mobileWidth)
            display none