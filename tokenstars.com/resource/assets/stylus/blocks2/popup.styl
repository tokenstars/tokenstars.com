.popup
    display block
    
    position fixed
    
    top 0
    left -9999px
    
    width 100%
    height 100%
    
    background-color rgba(#000, 0.5)
    background linear-gradient(to bottom, rgba(black, 0.65), rgba(black, 0.5))
    
    overflow-y auto
    
    z-index 10
    
    opacity 0
    
    transition opacity 0.3s ease
    
    -webkit-transform translateZ(0)
    -webkit-overflow-scrolling touch
    
    &.st-active
        left 0
        opacity 1

        @media screen and (max-width: 640px)
            overflow-x: hidden
        
    &-box
        display none
        
        position relative
        
        width 830px
        
        margin-left auto
        margin-right auto
        margin-top 100px
        margin-bottom 100px
        
        padding-left 40px
        padding-right 40px
        padding-top 50px
        padding-bottom 20px
        
        background-color #fff
        
        border-radius 10px

        outline none

        @media screen and (max-width: 640px)
            border-radius 0
            
            width 100%
            
            margin-top 0
            margin-bottom 0
            
            padding-left 20px
            padding-right 20px
            padding-top 30px
            padding-bottom 15px
        &--empty
            background-color transparent
        
    &--close
        display block
        
        position absolute
        
        top 20px
        right 20px
        
        width 20px
        height 20px
        
        background-image url(../images/close-blue.svg)
        background-size 100% 100%
        
        opacity 0.5
        
        transition opacity 0.2s ease
        
        cursor pointer
        
        z-index 2
        
        &:hover,
        &:active
            opacity 1
        
    &__title
        display block
        
        position relative
        
        font-size 24px
        font-weight 700
        
        text-align left
        
    &-footer
        display flex
        
        position relative
        
        width 100%
        
        margin-top 40px
        
        justify-content space-between
        
        align-items center

        @media screen and (max-width: 640px)
            flex-direction column-reverse

            flex-wrap wrap
            
            margin-top 30px
        
    &-sc
        display block
        
        position relative
        
        font-size 0

        @media screen and (max-width: 640px)
            text-align center
            
            margin-top 30px
        
        &__title
            display block
            
            position relative
            
            font-size 14px
            font-weight 500
            
            color #000
            
            margin-top 5px
            margin-bottom 10px

        &__item
            display block
            position relative
            font-size 16px
            color #999
            padding-top 5px
            padding-bottom 5px

        
        &__link
            display inline-block
            
            position relative
            
            font-size 16px
            
            color #157FFB
            
            text-decoration none
            
            padding-top 5px
            padding-bottom 5px
            padding-left 5px
            padding-right 5px
            
            &:first-child
                padding-left 0
                
            &:last-child
                padding-right 0
            
            &:hover,
            &:active
                color #333
