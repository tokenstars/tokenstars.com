.input
    display inline-block
    
    position relative
    
    width 100%
    height 50px
    
    border-radius 8px
    
    border 1px solid #c3c3c3
    outline none
    
    background-color #fff
    
    font-family $font-gotham
    font-weight 500
    font-size 20px
    
    color #000
    
    -webkit-appearance none
    
    box-sizing border-box
    
    padding-top 0
    padding-bottom 0
    padding-left 17px
    padding-right 17px