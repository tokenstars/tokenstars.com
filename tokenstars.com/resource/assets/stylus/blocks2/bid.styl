color-light-blue = rgb(54, 71, 187)
color-lighter-blue = #4556cc
color-dark-blue = rgb(39, 54, 155)

.bid-title
    display flex
    justify-content space-between

    padding-top 20px
    padding-bottom 20px

    &__text
        color white

        font-size 20px
        font-weight bold

    &__close
        width 20px
        height 20px

        opacity 0.5

        cursor pointer

        background-image url(../images/close-blue.svg)
        background-size 100% 100%

        &:hover,
        &:active
            opacity 1

.bid-currencies
    background color-light-blue
    padding 20px 25px
    margin 0 -40px

    @media screen and (max-width: 640px)
        display: flex;
        padding: 10px 18px;

    label
        color white
        font-weight bold

        border-radius 7px

        padding 10px
        margin-left 15px
        background color-lighter-blue
        &:hover
            background color-dark-blue

    input
        display none

        &:checked + label
            background white
            color black

.bid-footer
    background white

    display flex
    flex-direction: column

    border-bottom-right-radius 10px
    border-bottom-left-radius 10px

    padding 20px 40px
    margin 0 -40px

    &__title
        font-size 20px
        font-weight bold

        margin-bottom 10px

    &__item
        color: #999

        font-size 16px

        padding-top 5px
        padding-bottom 5px

.bid-block
    display flex

    color: white
    background color-light-blue

    padding 20px 40px
    margin 0 -40px

    & a
        color #66c0ff
        font-weight 500

        &:focus,
        &:hover,
        &:active,
        &:visited
            color #c7f4ff
    @media screen and (max-width: 640px)
        display: flex;
        flex-direction: column;
        text-align: center;

.bid-email
    text-align center
    width 400px
    margin 0 auto

    @media screen and (max-width: 640px)
        display: flex
        flex-direction: column
        width: 100%

.bid-payments
    display flex
    flex-flow row wrap
    justify-content space-between

    color white
    background color-light-blue

    padding 20px 40px
    margin 0 -40px

    &__qr
        background color-dark-blue

    &__options
        display flex
        flex-direction column
        margin-left: auto;
        margin-right: auto;

        @media screen and (max-width: 640px)
          width: 100%
          word-wrap break-word
          text-align: center

        padding 20px

.bid-wallet
    display flex
    flex-direction column
    justify-content center

    &__title
        color white
        font-weight bold
        text-align center
        margin-bottom 10px

        padding 5px

    &__address
        background white
        color black
        text-align center
        margin-bottom 10px

        border-radius 7px

        padding 20px

.bid-input
    display inline-block
    height 50px
    background white
    color black
    text-align center
    margin-bottom 10px

    border-radius 7px

    padding 0 23px

    &:focus
        outline none
        box-shadow 0 0 1.5pt 2pt rgb(77, 144, 254)


.bid-metamask
    display flex
    input
        margin-right 15px
        width: auto

.tip-button
    width: 320px;
    height: 50px;
    margin: 0 auto
    background-size: 100%
    background-image: url('../images/charity/5_pay_mm_off.png')
    background-repeat: no-repeat
    cursor: pointer

.tip-button:hover
    background-image: url('../images/charity/5_pay_mm_over.png')

.tip-button:active
    background-image: url('../images/charity/5_pay_mm_off.png')


    .sk-fading-circle {
        margin: 100px auto;
        width: 40px;
        height: 40px;
        position: relative;
    }

.loader,
.loader:after {
    border-radius: 50%;
    width: 10em;
    height: 10em;
}
.loader {
    margin: 60px auto;
    font-size: 10px;
    position: relative;
    text-indent: -9999em;
    border-top: 1.1em solid rgba(255, 255, 255, 0.2);
    border-right: 1.1em solid rgba(255, 255, 255, 0.2);
    border-bottom: 1.1em solid rgba(255, 255, 255, 0.2);
    border-left: 1.1em solid #ffffff;
    -webkit-transform: translateZ(0);
    -ms-transform: translateZ(0);
    transform: translateZ(0);
    -webkit-animation: load8 1.1s infinite linear;
    animation: load8 1.1s infinite linear;
}
@-webkit-keyframes load8 {
    0% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    }
    100% {
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg);
    }
}
@keyframes load8 {
    0% {
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
    }
    100% {
        -webkit-transform: rotate(360deg);
        transform: rotate(360deg);
    }
}
