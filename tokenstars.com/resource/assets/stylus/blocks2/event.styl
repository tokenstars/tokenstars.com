.event
    display inline-block

    position relative
    
    width 225px
    height 160px

    vertical-align top
    
    box-shadow 0 2px 6px 0 rgba(#000, 0.2)
    
    border-radius 5px
    
    background-color #fff
    
    &.st-big
        width 305px
        height 260px
        margin-right 2%

        @media screen and (max-width: $mobileWidth)
            width 100%
            height auto
            margin-right 0

    &.st-big &-header
        height 140px
        
        background-image url(../images/events-background.jpg)
        background-size cover
        background-position center center
        
    &.st-big &-body
        height 120px
        
    &-header
        display block
        
        position relative
        
        width 100%
        height 90px
        
        background-color #3C224C
        background-size: contain
        background-repeat: no-repeat
        background-position: center
        
        border-radius 5px 5px 0 0
        
        padding-top 25px
        padding-bottom 25px
        padding-left 40px
        padding-right 40px
        
    &--image
        display block
        
        position relative
        
        width 100%
        height 100%
        
        background-size contain
        background-repeat no-repeat
        background-position center center
        
    &-body
        display flex
        
        position relative
        
        width 100%
        height 70px
        
        align-items center
        
        text-align center
        
        justify-content center
        
        padding-left 30px
        padding-right 30px
        
    &__title
        display block
        
        position relative
        
        font-size 20px
        font-weight bold
        
        color #000
        
    &__caption
        display block
        
        position relative
        
        font-size 16px
        font-weight 500
        line-height 1.3em
        
        color #000
        
        margin-top 5px
        
    &__date
        display block
        
        position relative
        
        font-size 16px
        
        color #8C8C8C
        
        margin-top 5px