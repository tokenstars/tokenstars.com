.tabs
    display block
    
    position relative
    
    width 100%
    
    font-size 0

    @media screen and (max-width: $mobileWidth)
        display flex
        flex-direction column

    &__item
        display inline-block
        
        position relative
        
        height 50px
        
        border-radius 5px 5px 0 0
        
        font-size 24px
        font-weight bold
        
        padding-left 35px
        padding-right 35px
        
        vertical-align top
        
        line-height 50px
        
        white-space nowrap
        
        user-select none
        
        background-color #fff
            
        color #000
        
        cursor default
        
        @media screen and (max-width: $mobileWidth)
            display block
            
            width 100%
            
            border-radius 0
            
            padding-left 0
            padding-right 0
            
            text-align center

            border-radius 5px 5px 0 0
            
            &:first-child
                order 1
    
    & a&__item
        background-color rgba(#157FFB, 0.2)
        
        color #fff
        
        cursor pointer
        
        text-decoration none
        
        &:hover,
        &:active
            background-color rgba(#157FFB, 0.5)  