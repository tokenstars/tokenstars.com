.history
    background-color #F7F7F7
    
    border-top 6px solid #DCDCDC
    
    padding-top 30px
    padding-bottom 40px
    
    & h2 + p
        margin-top 10px
        
    &-items
        display block
        
        position relative
        
        width 100%
        
        font-size 0
        
    &-item
        display inline-block
        
        position relative
        
        width 49%
        
        background-color #fff
        
        border-radius 10px
        
        box-shadow 0 2px 6px 0 rgba(#000, 0.2)
        
        vertical-align top
        
        margin-top 20px
        margin-right 2%
        
        padding-left 20px
        padding-right 20px
        padding-top 20px
        padding-bottom 20px
        
        &:nth-child(even)
            margin-right 0
            
    &-header
        display flex
        
        position relative

        width 100%
        
        justify-content space-between
        
        align-items flex-start
        
    &__type
        display block
        
        position relative
        
        font-size 16px
        font-weight 500
        
        color #000
        
        text-transform uppercase
        
        margin-top 5px
        
        & i
            color #8C8C8C
            
            font-style normal
            
            text-transform lowercase
            
    &__date
        display block
        
        position relative
        
        font-size 16px
        font-weight 500
        
        color #8C8C8C
        
    &--separator
        display block
        
        position relative
        
        width 100%
        height 3px
        
        background-color rgba(#8C8C8C, 0.3)
        
        margin-top 10px
        
    &__value
        display block
        
        position relative
        
        font-size 22px
        font-weight bold
        
        color #000
        
        text-transform uppercase
        
        margin-top 10px
        
        & i
            color #8C8C8C
            
            font-style normal
            font-weight normal
            
        & strong
            color #157FFB
            
            font-family 'Lucida Grande', Arial, sans-serif
            
    &__eta
        display block
        
        position relative
        
        font-size 16px
        
        color #8C8C8C
        
        margin-top 10px