.slider
    display block
    
    position relative
    
    width 100%
    height 100%
    
    overflow hidden
    
    border-radius 0 0 0 10px
    
    @media screen and (max-width: $mobileWidth)
        border-radius 0
    
    &--frame
        display block
        
        position relative
        
        width 100%
        height 100%
        
        background-size cover
        background-position center center
        
    &-box
        display block
        
        position relative
        
        width 100%
        
        padding-top 50px
        
    &--link
        display block
        
        position relative
        
        width 100%
        height 100%
        
    & img
        display block
        
        position relative
        
        width 100%
        height 100%
                
    &-overlay
        display block
        
        position absolute
        
        width 100%
        
        left 0
        bottom 20px
        
        text-align center
        
        z-index 2
        
        font-size 0

        &--deal-success
            bottom 5px

            & .slider-control
                background none
        
        @media screen and (max-width: $mobileWidth)
            bottom 10px

                
    &-control
        display inline-block
        
        position relative
        
        background-color #fff
        
        border-radius 5px
        
        padding-top 6px
        padding-bottom 6px
        padding-left 12px
        padding-right 12px
        
        font-size 0
        
        vertical-align top
        
        margin-left 10px
        
        &:first-child
            margin-left 0
        
        @media screen and (max-width: $mobileWidth)
            padding-top 5px
            padding-bottom 5px

        &__item
            display inline-block
            
            position relative
            
            width 15px
            height 15px
            
            background-color #157FFB
            
            border-radius 50%
            
            vertical-align top
            
            margin-left 12px
            
            cursor pointer
            
            @media screen and (max-width: $mobileWidth)
                width 9px
                height 9px
                
                margin-left 5px
            
            &:first-child
                margin-left 0
            
            &.st-active
                background-color #BDBDBD
                
                cursor default
                
        &__show
            display block
            
            position relative
            
            font-size 15px
            line-height 15px

            color #157ffb

            cursor pointer
            
            user-select none

            @media screen and (max-width: $mobileWidth)
                font-size 9px
                
                line-height 9px
            
            &:hover,
            &:active
                color #333